{# templates/song/list-all.html.twig #}
{% extends "base.html.twig" %}

{% block content %}
    <div class="container mt-5">
        <h1>Song List</h1>
        <div class="row">
            <div class="col-md-12">
                <div class="d-flex justify-content-between align-items-center activity">
                    {# <div><i class="fa fa-clock-o"></i><span class="ml-2">11h 25m</span></div> #}
                    <div class="mt-5 mx-auto"><span class="activity-done">Songs({{ songs|length }})</span></div>
                    {# <div class="icons"><i class="fa fa-search"></i><i class="fa fa-ellipsis-h"></i></div> #}
                </div>
                <div class="mt-3">
                    <ul class="list list-inline">
                        {% for song in songs %}
                            <li class="d-flex justify-content-between">
                                <div class="d-flex flex-row align-items-center"><i class="fa fa-check-circle checkicon"></i>
                                    <div class="ml-2">
                                        <h6 class="mb-0"><span class="font-weight-bold">{{ song.song_name }}</span></h6>
                                    </div>
                                </div>
                                <div class="d-flex flex-row align-items-center">
                                    <div class="d-flex flex-column mr-4">
                                        <div class="text-right">
                                            <h6 class="mb-0">Overal Rating: <span class="font-weight-bold">{{ song.avg_rating_value ? song.avg_rating_value|round(1, 'common') : '0' }} / 10</span></h6>
                                            <div class="rating-empty"></div>
                                            <div class="rating-full" style="width:  {{ song.avg_rating_value * 16 }}px !important;"></div>
                                            <h6 class="mb-0">Votes: <span class="font-weight-bold">{{ song.vote_count ? song.vote_count : '0' }}</span></h6>
                                            <a href="{{ path('/song/view/', {songId: song.song_id}) }}">Rate this song</a>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-column mr-2">
                                        <div class="text-right">
                                            <a href="{{ path('/song/delete/', {songId: song.song_id}) }}"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}